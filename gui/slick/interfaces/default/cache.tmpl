#set global $header='Cache'
#set global $sbPath='..'
#set global $topmenu='cache'#

#include $os.path.join($sickbeard.PROG_DIR, 'gui/slick/interfaces/default/inc_top.tmpl')

<style type="text/css">
.sort_data {display:none}
</style>

