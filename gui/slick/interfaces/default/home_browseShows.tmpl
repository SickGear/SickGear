	var \$container = [\$('#container')];
	jQuery.each(\$container, function (j) {
		this.isotope({
			itemSelector: '.show-card',
			sortBy: 'original-order',
			layoutMode: 'masonry',
			masonry: {
				columnWidth: 188,
				isFitWidth: !0,
